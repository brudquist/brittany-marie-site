#site-modal.modal.fade{ role: :dialog }
  .modal-dialog
    .modal-content
      .modal-header
        %button{ type: :button, class: :close, :'data-dismiss' => :modal} &times;
        %h3.modal-title#site-modal-title Details
        .container-fluid
          .row
            .col-sm-12
              .modal-body
        .modal-footer
          %button.btn.btn-default{ :'data-dismiss' => :modal }Close
